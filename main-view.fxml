<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.yourproject.MainController">

    <!-- BarChart for displaying game comparison data -->
    <BarChart fx:id="gameChart">
        <xAxis>
            <CategoryAxis label="Aspect"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Value"/>
        </yAxis>
    </BarChart>

    <!-- Button to switch to a table view -->
    <Button text="View Table" fx:id="switchButton" onAction="#switchToTableView"/>
</VBox>
